{
    "manifest_version": 3,
    "name": "JobFlow Clipper",
    "version": "1.0",
    "description": "Save job applications to JobFlow with one click.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "http://localhost:8000/*",
        "https://job-flow-psi.vercel.app/*",
        "https://job-flow-zr6z.vercel.app/*",
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.welcometothejungle.com/*",
        "https://*.wttj.co/*",
        "https://*.hellowork.com/*",
        "https://*.glassdoor.com/*",
        "https://*.apec.fr/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://localhost:3000/*",
                "https://job-flow-psi.vercel.app/*",
                "https://job-flow-zr6z.vercel.app/*"
            ],
            "run_at": "document_idle",
            "js": [
                "token_listener.js"
            ]
        },
        {
            "matches": [
                "http://localhost:3000/*",
                "https://job-flow-psi.vercel.app/*",
                "https://job-flow-zr6z.vercel.app/*"
            ],
            "run_at": "document_idle",
            "world": "MAIN",
            "js": [
                "token_reader.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}