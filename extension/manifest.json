{
    "manifest_version": 3,
    "name": "JobFlow Clipper",
    "version": "1.0",
    "description": "Save job applications to JobFlow with one click.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:8000/*",
        "https://www.linkedin.com/*",
        "https://www.indeed.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}